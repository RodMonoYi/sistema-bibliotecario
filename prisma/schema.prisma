generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  senha       String
  tipo        TipoUsuario @default(USUARIO)
  livros      Livro[]  @relation("LivrosUsuario")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Livro {
  id          Int      @id @default(autoincrement())
  titulo      String
  autor       String
  descricao   String?
  usuarioId   Int
  usuario     Usuario  @relation("LivrosUsuario", fields: [usuarioId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TipoUsuario {
  USUARIO
  ADMINISTRADOR
}
